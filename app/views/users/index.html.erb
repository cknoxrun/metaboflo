<% if @site %>
<h1>All Users for "<%= @site.name %>"</h1>
<% else %>
<h1>All Users</h1>
<% end %>

<table class="list">
	<tr>
	  <th>Picture</th>
		<th>Name</th>
		<th>Site</th>
		<th>Email</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @users.each do |user| %>
	<tr class="<%= cycle('odd', 'even') %>">
	  <td>
	    <% if user.photo_file %>
	      <%= image_tag(user.photo_file.attachment.url(:thumb)) %><br />
      <% else %>
        &nbsp;
      <% end %>
    </td>
		<td><%= user.name %></td>
		<% if user.site %>
		  <td><%= user.site.name %></td>
		<% else %>
		  <td>-</td>
		<% end %>
		<td><%= user.email %></td>
		<td><%= link_to_show user %></td>
		<td><%= link_to_edit edit_user_path(user) %></td>
		<td><%= link_to_destroy user %></td>
	</tr>

	<% end %>
</table>

<br />

<%= link_to_new 'user', new_user_path %>
