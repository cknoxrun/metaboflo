<h1>Listing Task Categories</h1>

<table class="list">
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @task_categories.each do |task_category| %>
  <tr>
    <td><%= task_category.name %></td>
    <td><%= task_category.description %></td>
    <td><%= show_link task_category %></td>
    <td><%= edit_link edit_task_category_path(task_category) %></td>
    <td><%= destroy_link task_category %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link 'task category', new_task_category_path %>
