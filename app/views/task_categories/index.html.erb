<h1>Listing Task Categories</h1>

<table class="list">
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @task_categories.each do |task_category| %>
  <tr>
    <td><%= task_category.name %></td>
    <td><%= task_category.description %></td>
    <td><%= link_to_show task_category %></td>
    <td><%= link_to_edit edit_task_category_path(task_category) %></td>
    <td><%= link_to_destroy task_category %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to_new 'task category', new_task_category_path %>
