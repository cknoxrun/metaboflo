<% content_for :css do %>
  <%= stylesheet_link_tag 'clients' %>
<% end %>

<h1><%= @client.name %></h1>

<p class="actions">
  <%= link_to 'Edit', edit_client_path(@client) %>
  <%= link_to 'Back to Clients', clients_path %>
</p>

<div class="box">
  <p>
    <b><%= Client.human_attribute_name(:email) %>:</b>
    <%= @client.email %>
  </p>
  <p>
    <b><%= Client.human_attribute_name(:name) %>:</b>
    <%= @client.name %>
  </p>
</div>
<table>
	<tr>
		<th>Sample Manifest #</th>
		<th>Barcodes</th>
	</tr>
	<% @client.sample_manifests.order("id").each do |sm| %>
		<tr>
			<td><%= sm.id %></td>
			<td class="barcodes">
			<% if File.exists?(sm.barcodes_path) %>
			
				<%= link_to 'Barcodes', download_barcodes_client_path(:barcodes_path => sm.barcodes_path), :target => :blank %></td>
			<% else %>
				No Barcodes Exist
			<% end %>
			</td>
		</tr>
	<% end %>
</table>
<p class="actions">
  <%= link_to 'Edit', edit_client_path(@client) %>
  <%= link_to 'Back to Clients', clients_path %>
</p>
