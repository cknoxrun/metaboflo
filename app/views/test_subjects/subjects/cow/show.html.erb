<h1>Showing <%= TestSubject.title %> <%= @test_subject %></h1>

<p>
  <b><%= TestSubject.title %> Code:</b>
  <%= @test_subject.code %>
</p>

<p>
  <b>Subspecies:</b>
  <%= @test_subject.subspecies %>
</p>

<p>
	<b>Birth date:</b>
	<%= @test_subject.birthdate %>
</p>

<p>
	<b>Calving date:</b>
	<%= @test_subject.calving_date %>
</p>

<p>
	<b>Lactation Number:</b>
	<%= @test_subject.lactation_number %>
</p>

<p>
	<b>Experiment start date:</b>
	<%= @test_subject.experiment_start_date %>
</p>

<p>
	<b>Days in Milk at start:</b>
	<%= @test_subject.days_in_milk_at_start %>
</p>

<p>
	<b>Experiment end date:</b>
	<%= @test_subject.experiment_end_date %>
</p>

<p>
	<b>Days in Milk at end:</b>
	<%= @test_subject.days_in_milk_at_end %>
</p>

<p>
	<b>Notes:</b>
	<%= @test_subject.notes %>
</p>

<br />

<%= link_to_edit edit_test_subject_path(@test_subject) %>

<br />
<br />

<fieldset>
  <legend>Diet Information</legend>

  <% if @meals.length > 0 %>
    <table class="list">
      <tr>
        <th>Diet</th>
        <th>Amount (kg)</th>
        <th>Period</th>
        <th>Day</th>
      </tr>

    <% @meals.each do |meal| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= link_to meal.diet.name, diet_path(meal.diet) %></td>
        <td><%= meal.amount %></td>
        <td><%= meal.consumed_during_period %></td>
        <td><%= meal.consumed_on_day %></td>
        <td><%= link_to_show test_subject_meal_path(@test_subject, meal) %></td>
        <td><%= link_to_edit edit_test_subject_meal_path(@test_subject, meal) %></td>
        <td><%= link_to_destroy test_subject_meal_path(@test_subject, meal) %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to_new "meal for #{TestSubject.title.downcase} #{@test_subject.code}", new_test_subject_meal_path(@test_subject) %>
  <% else %>
    No current diet information.
  <% end %>
</fieldset>

