<h1>Listing ingredients</h1>

<table class="list">
  <tr>
    <th>Name</th>
		<th colspan="3">Actions</th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td><%= show_link ingredient %></td>
    <td><%= edit_link edit_ingredient_path(ingredient) %></td>
    <td><%= destroy_link ingredient %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link 'ingredient', new_ingredient_path %>
