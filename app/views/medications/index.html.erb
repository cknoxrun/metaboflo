<h1>Listing Medications for <%= TestSubject.title %> '<%= @test_subject.code %>'</h1>

<table class="list">
	<tr>
		<th>Drug</th>
		<th>Started on</th>
		<th>Stopped on</th>
		<th>Currently taking</th>
		<th>Drugbank reference</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @medications.each do |medication| %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%= medication.drug %></td>
		<td><%= medication.started_on %></td>
		<td><%= medication.stopped_on %></td>
		<td><%= boolean_to_english(medication.currently_taking) %></td>
		<td><%= medication.drugbank_reference %></td>
		<td><%= link_to_show test_subject_medication_path(@test_subject, medication) %></td>
		<td><%= link_to_edit edit_test_subject_medication_path(@test_subject, medication) %></td>
		<td><%= link_to_destroy test_subject_medication_path(@test_subject, medication) %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to_new 'medication', new_test_subject_medication_path(@test_subject) %>
