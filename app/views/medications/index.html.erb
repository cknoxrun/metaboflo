<h1>Listing Medications for <%= TestSubject.title %> '<%= @test_subject.code %>'</h1>

<table class="list">
	<tr>
		<th>Drug</th>
		<th>Started on</th>
		<th>Stopped on</th>
		<th>Currently taking</th>
		<th>Drugbank reference</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @medications.each do |medication| %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%= medication.drug %></td>
		<td><%= medication.started_on %></td>
		<td><%= medication.stopped_on %></td>
		<td><%= boolean_to_english(medication.currently_taking) %></td>
		<td><%= medication.drugbank_reference %></td>
		<td><%= show_link test_subject_medication_path(@test_subject, medication) %></td>
		<td><%= edit_link edit_test_subject_medication_path(@test_subject, medication) %></td>
		<td><%= destroy_link test_subject_medication_path(@test_subject, medication) %></td>
	</tr>
	<% end %>
</table>

<br />

<%= new_link 'medication', new_test_subject_medication_path(@test_subject) %>
